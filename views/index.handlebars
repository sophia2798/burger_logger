<main class="container">
    <header class="row" id="header-w-image">
        <img src="../media/burger.png" alt="burger icon" class="img-fluid rounded mt-1">
        <h1>Burger Logger</h1>
    </header>
    <section class="row" id="display-area">
        <div class="col-6" id="left">
            <h2>Uneaten Burgers</h2>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{burger_name}}
                        <button id="devour" data-id="{{id}}" data-newdevoured="{{devoured}}">DEVOUR IT!</button>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-6" id="right">
            <h2>Eaten Burgers</h2>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{burger_name}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </section>
    <section id="form-container" class="row">
        <h4>Enter a burger you would like to eat!</h4>
        <form id="new-burger">
            <label for="burger">Burger Name:</label>
            <input type="text" id="burger" name="name">

            <button type="submit">Add Burger</button>
        </form>
    </section>
</main>